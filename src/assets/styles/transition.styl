$fade := fade
$popup := popup

.{$fade}
  &-enter-active,
  &-leave-active
    transition opacity .5s ease-out
  &-enter,
  &-leave-to
    opacity 0

.{$popup}-left,
.{$popup}-right,
.{$popup}-top,
.{$popup}-bottom
  &-enter-active,
  &-leave-active
    transition transform .3s ease-out
.{$popup}-center
    transition: all .2s ease-out

.{$popup}-left
  &-enter,
  &-leave-to
    transform: translate3d(-100%, 0, 0);
.{$popup}-right
  &-enter,
  &-leave-to
    transform: translate3d(100%, 0, 0);
.{$popup}-top
  &-enter,
  &-leave-to
    transform: translate3d(0, -100%, 0);
.{$popup}-bottom
  &-enter,
  &-leave-to
    transform: translate3d(0, 100%, 0);
.{$popup}-center
  &-enter,
  &-leave-to
    opacity 0
    transform scale(.7)
